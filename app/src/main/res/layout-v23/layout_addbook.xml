<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="#500c0c0c"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="4dp"
    card_view:layout_collapseParallaxMultiplier="1.0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/book1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/blankbook" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/book1"
                android:layout_toRightOf="@+id/book1"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:ems="10"
                android:hint="ชื่อหนังสือ"
                android:inputType="textLongMessage"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textColorLink="@color/cardview_light_background"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/type_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_book"
            android:layout_toEndOf="@+id/book1"
            android:layout_toRightOf="@+id/book1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:inputType="textMultiLine|textLongMessage"
            android:hint="หมวดหนังสือ"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light"
            android:textColorLink="@color/cardview_light_background"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book1"
            android:layout_toEndOf="@+id/book1"
            android:layout_toRightOf="@+id/book1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:inputType="textMultiLine|textLongMessage"
            android:hint="ผู้แต่ง"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light"
            android:textColorLink="@color/cardview_light_background"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/detail_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_book"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/book1"
            android:layout_toRightOf="@+id/book1"
            android:backgroundTint="@color/cardview_light_background"
            android:ems="10"
            android:inputType="textMultiLine|textLongMessage"
            android:text="รายละเอียดหนังสือ"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light"
            android:textColorLink="@color/cardview_light_background"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_add"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="ADD"
            android:layout_below="@+id/book1"
            android:layout_alignRight="@+id/book1"
            android:layout_alignEnd="@+id/book1"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>


