
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardBackgroundColor="#500c0c0c"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="323dp">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/book1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_book"
                android:layout_toEndOf="@+id/img_book"
                android:layout_toRightOf="@+id/img_book">

                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="สมองทองคำ"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_book"
                android:layout_toEndOf="@+id/img_book"
                android:layout_toRightOf="@+id/img_book">

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/editType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textInputLayout2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textInputLayout2"
                android:layout_below="@+id/textInputLayout2"
                android:inputType="text"
                android:text="หนังสือเชิงปรัชญา"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_book"
                android:layout_toEndOf="@+id/img_book"
                android:layout_toRightOf="@+id/img_book">

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/editDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editType"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/editType"
                android:layout_below="@+id/editType"
                android:inputType="textMultiLine"
                android:text="@string/detailbook"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_book"
                android:layout_toEndOf="@+id/img_book"
                android:layout_toRightOf="@+id/img_book">

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/editAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editDetail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/editDetail"
                android:layout_below="@+id/img_book"
                android:inputType="text"
                android:text="ขุนเขา สินธุเสน เขจรบุตร "
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/idbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editAuthor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="id_book"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btnupdate"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/idbook"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/img_book"
                android:backgroundTint="#008b27"
                android:drawableLeft="@drawable/ic_trueicon"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnclose"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/btnupdate"
                android:layout_toEndOf="@+id/idbook"
                android:layout_toRightOf="@+id/idbook"
                android:backgroundTint="#8b0009"
                android:drawableLeft="@drawable/ic_close"
                android:padding="10dp"
                android:layout_alignTop="@+id/btnupdate" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
