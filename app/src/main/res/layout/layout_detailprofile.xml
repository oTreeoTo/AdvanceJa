<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="#500c0c0c"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="4dp"
    card_view:layout_collapseParallaxMultiplier="1.0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/book1"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="34dp"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="รหัสประจำตัว :"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="570406263XXX"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/number"
            android:layout_alignBottom="@+id/number"
            android:layout_toRightOf="@+id/number"
            android:layout_toEndOf="@+id/number" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="ชื่อ-นามสกุล :"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_below="@+id/number"
            android:layout_alignLeft="@+id/number"
            android:layout_alignStart="@+id/number" />

        <TextView
            android:id="@+id/nameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="นาย สุริยา ท่าเรือ"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:layout_toEndOf="@+id/name" />

        <TextView
            android:id="@+id/birthdaytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="วันเกิด :"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name" />

        <TextView
            android:id="@+id/bdid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="1/08/1996"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/birthdaytitle"
            android:layout_alignBottom="@+id/birthdaytitle"
            android:layout_toRightOf="@+id/birthdaytitle"
            android:layout_toEndOf="@+id/birthdaytitle" />
        <TextView
            android:id="@+id/emailtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="อีเมล :"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/emid"
            android:layout_alignBottom="@+id/emid"
            android:layout_alignLeft="@+id/birthdaytitle"
            android:layout_alignStart="@+id/birthdaytitle" />

        <TextView
            android:id="@+id/emid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="snsmek13@gmail.com"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/birthdaytitle"
            android:layout_toRightOf="@+id/emailtitle"
            android:layout_toEndOf="@+id/emailtitle" />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="สถานะ :"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_below="@+id/emailtitle"
            android:layout_toLeftOf="@+id/bdid"
            android:layout_toStartOf="@+id/bdid"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/typeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="10dp"
            android:text="นักศึกษา"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/type"
            android:layout_alignBottom="@+id/type"
            android:layout_toRightOf="@+id/type"
            android:layout_toEndOf="@+id/type" />

    </RelativeLayout>
</android.support.v7.widget.CardView>