<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="#500c0c0c"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="4dp"
    card_view:layout_collapseParallaxMultiplier="1.0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4b23b"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/book1"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/book1">

                <EditText
                    android:id="@+id/name_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/book1"
                    android:layout_toRightOf="@+id/book1"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:ems="10"
                    android:hint="ชื่อหนังสือ"
                    android:inputType="textLongMessage"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textColorLink="@color/cardview_light_background"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/type_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/detail_book"
                    android:layout_marginBottom="18dp"
                    android:layout_toEndOf="@+id/book1"
                    android:layout_toRightOf="@+id/book1"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:ems="10"
                    android:hint="หมวดหนังสือ"
                    android:inputType="textMultiLine|textLongMessage"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textColorLink="@color/cardview_light_background"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/detail_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/author_book"
                    android:layout_marginBottom="12dp"
                    android:layout_toEndOf="@+id/book1"
                    android:layout_toRightOf="@+id/book1"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:ems="10"
                    android:hint="รายละเอียดหนังสือ"
                    android:inputType="textMultiLine|textLongMessage"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textColorLink="@color/cardview_light_background"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/author_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book1"
                    android:layout_toEndOf="@+id/book1"
                    android:layout_toRightOf="@+id/book1"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:ems="10"
                    android:hint="ผู้แต่ง"
                    android:inputType="textMultiLine|textLongMessage"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textColorLink="@color/cardview_light_background"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="onCreateBook"
            android:text="ADD" />


    </RelativeLayout>


</android.support.v7.widget.CardView>


